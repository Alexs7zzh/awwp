---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Picture } from 'astro:assets';
import Header from "@components/Header.astro";
import { getCollection } from "astro:content";

const works = await getCollection("work", (entry) => {
  return entry.data.year;
}).then(entries => entries.sort((a, b) => b.data.year - a.data.year));
---

<BaseLayout>
  <div class="header">
    <h1>Akira Wakita</h1>
    <Header color="black" />
  </div>

  <ul class="work-grid">
    {works.map((work, index) => (
      <li class="grid-item">
        <a href={`/${work.id}`} aria-labelledby={`work-title-${work.id}`}>
          <div class="image-wrapper">
            <Picture
              src={work.data.thumbnail}
              alt={work.data.title}
              formats={['avif', 'webp']}
              widths={[400, 800]}
              sizes="(max-width: 767px) 100vw, (max-width: 1199px) 50vw, 33vw"
              class="list-image"
              loading={index < 6 ? "eager" : "lazy"}
              fetchpriority={index < 6 ? "high" : "auto"}
            />
          </div>
          <div class="text-content">
            <h3 id={`work-title-${work.id}`}>{work.data.title}</h3>
            <p class="meta">{work.data.year} - {work.data.keywords.join(', ')}</p>
          </div>
        </a>
      </li>
    ))}
  </ul>
</BaseLayout>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem 2rem 2rem;
    margin-bottom: 10rem;
  }

  h1 {
    padding: 0;
    margin: 0;
    font-weight: normal;
    font-size: 1.5rem;
  }

  .work-grid {
    margin: 0 auto;
    margin-bottom: 10rem;
    padding: 0 2rem;
    max-width: 1600px;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 10rem 6rem;
    list-style: none;
    align-items: end;
  }

  .grid-item a {
    display: grid;
    grid-template-rows: 1fr auto;
    height: 100%;
    text-decoration: none;
    color: inherit;
    transition: opacity 0.2s ease;
  }

  .grid-item a:hover {
    opacity: 0.8;
  }

  .image-wrapper {
    grid-row: 1;
    align-self: end;
    margin-bottom: 0.75rem;
    background-color: #f0f0f0;
  }

  .list-image {
    display: block;
    width: 100%;
    height: auto;
  }

  .text-content {
    grid-row: 2;
  }

  .text-content h3 {
    font-size: 1rem;
    font-weight: 500;
    margin: 0 0 0.25rem 0;
    color: #333;
    letter-spacing: 0.5px;
  }

  .text-content .meta {
    font-size: 0.85rem;
    color: #666;
    margin: 0;
  }
</style>