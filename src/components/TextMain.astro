---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import { Config } from "@config";

interface Props {
  title: string;
  content: string;
  image?: ImageMetadata | undefined;
  parallaxSpeed?: number;
}

const {
  title,
  content,
  image = undefined,
  parallaxSpeed = Math.random(),
} = Astro.props;
---

<article class={`artwork-content variant-${Config.textBlock.style}`} data-parallax-speed={parallaxSpeed}>
  <div class="text-block">
    <h2 class="text-block-title">{title}</h2>
    <p class="text-block-content" set:html={content}></p>
  </div>

  {image !== undefined && (
    <figure class="image-wrapper">
      <Image
        src={image}
        alt={title}
        class="artwork-image"
        loading="lazy"
        format="webp"
      />
    </figure>
  )}
</article>

<style>
  /* ---------- Layout ---------- */
  .artwork-content {
    display: grid;
    grid-template-columns: 70% 30%;
    gap: 2rem;
    align-items: center;

    width: 100%;
    min-height: 70vh;
    padding: 2rem;
    margin-bottom: 30vh;

    transition: all 0.3s ease-in-out;
  }

  .text-block {
    text-align: left;
  }

  .image-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .artwork-image {
    width: 100%;
    height: auto;
    flex-shrink: 0;
  }

  /* ---------- Base Typography ---------- */
  .text-block-title {
    font-family: 'Work Sans', sans-serif;
    font-size: 1.1rem;
    font-weight: 300;
    line-height: 1.4;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    max-width: 600px;
  }

  .text-block-content {
    font-family: 'Work Sans', sans-serif;
    font-size: 1rem;
    font-weight: 300;
    line-height: 1.6;
    color: #444;
    max-width: 600px;
  }

  /* ---------------------------------------------------
     VARIANT STYLES – swap by changing the `variant` prop
     --------------------------------------------------- */

  /* DEFAULT (narrow column, original look) */
  .variant-default .text-block-title,
  .variant-default .text-block-content {
    max-width: 600px;
  }

  /* WIDE (full‑width column with larger text) */
  .variant-wide .text-block-title,
  .variant-wide .text-block-content {
    max-width: none;
  }
  .variant-wide .text-block-title {
    font-size: 1.4rem;
    line-height: 1.3;
  }
  .variant-wide .text-block-content {
    font-size: 1.2rem;
    line-height: 1.7;
  }

  /* HERO (immersive, very large body text, compact title) */
  .variant-hero .text-block-title,
  .variant-hero .text-block-content {
    max-width: none;
  }
  /* Compact, higher‑contrast header */
  .variant-hero .text-block-title {
    font-size: clamp(1.5rem, 1vw, 2.2rem);
    line-height: 1.25;
    letter-spacing: 1px; /* tighter tracking for compact look */
    font-weight: 300; /* slightly heavier for contrast */
    color: #989898; /* darker for more contrast */
  }
  .variant-hero .text-block-content {
    font-size: clamp(1.25rem, 2vw + 0.5rem, 2rem);
    line-height: 1.5;
    margin-top: 2rem;
  }

  /* ---------- Optional: Responsive tweaks ---------- */
  @media (max-width: 768px) {
    .artwork-content {
      grid-template-columns: 1fr; /* stack */
    }
    .image-wrapper {
      margin-top: 2rem;
    }
  }
</style>
