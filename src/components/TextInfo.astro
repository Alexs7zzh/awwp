---
import { marked } from "marked";
interface Props {
  id: string;
  title: string;
  description: string;
}
const { id, title, description } = Astro.props;
---

<div class="text-info">
  <h2 id={`work-${id}-title`} class="title">
    {title}
  </h2>
  <div class="description" set:html={marked.parse(description)} />
  <a href={`/works/${id}/`} aria-labelledby={`work-${id}-title`}>
    View work â†’
  </a>
</div>
<style>
  .text-info {
    /* spacing & color */
    text-decoration: none;
    color: inherit;
    margin: var(--text-vertical-margin, 2rem)
      var(--text-horizontal-margin, 2rem);
    padding: 0;
    flex-grow: 1;
    /* --- CSS pinning (no JS) --- */
    position: sticky;
    top: 0; /* distance from top while pinned */
    align-self: flex-start; /* required for sticky inside flex rows */
    height: calc(100vh - (var(--text-vertical-margin, 2rem) * 2));
    /* keep long blurbs from exceeding the viewport while pinned */
    overflow: auto;
    /* layout for CTA at bottom-right */
    display: flex;
    flex-direction: column;
  }
  .title {
    display: inline-block;
    position: relative;
    padding-bottom: 2px;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 3px;
    font-weight: 400;
    margin-bottom: 1rem;
    color: var(--font-color-title);
  }
  .description {
    line-height: 1.6;
    font-size: 0.8rem;
    color: var(--font-color-body);
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  /* bottom-right CTA that feels like your title text */
  a {
    align-self: flex-end; /* right align */
    margin-top: auto; /* push to bottom when there's extra space */
    display: inline-block;
    position: relative;
    padding-bottom: 2px;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 400;
    color: var(--font-color-title);
    text-decoration: none;
  }
  a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 0;
    height: 1px;
    background: currentColor;
    transition: width 0.3s;
  }
  a:hover::after {
    width: 100%;
  }
  @media (max-width: 767px) {
    .text-info {
      position: static; /* disable sticky on mobile */
      top: auto;
      height: auto;
    }
    .description {
      -webkit-line-clamp: 6;
    }
  }
</style>
