---
interface Props {
  offsetXDesktop: number;
  // Could add other common layout props here if needed later
}

const { offsetXDesktop } = Astro.props;

const clampedOffsetX = Math.min(Math.max(offsetXDesktop, -45), 45);
const desktopStyles = `--offset-x-desktop: ${clampedOffsetX}%;`;
---
<div class="floating-container" style={desktopStyles}>
  <slot /> {/* Where the specific content (Artwork, Text, Video) goes */}
</div>

<style>
  .floating-container {
    width: 100%;
    max-width: 100%;
    margin-left: auto;
    margin-right: auto;
    transform: translateX(0);
    margin-bottom: 10rem; /* Adjust as needed */
    padding: 0 1rem;
    box-sizing: border-box;
  }

  @media (min-width: 769px) {
    .floating-container {
      /* Consider if different content types need different widths */
      width: 50%; 
      transform: translateX(var(--offset-x-desktop));
      padding: 0;
      margin-bottom: 12rem; /* Adjust as needed */
    }
  }
</style> 