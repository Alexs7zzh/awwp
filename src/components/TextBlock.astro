---
import FloatingContainer from '@components/FloatingContainer.astro';

interface Props {
  offsetXDesktop: number;
  title?: string;
  date?: string;
}

const { offsetXDesktop, title, date } = Astro.props;
---

<FloatingContainer {offsetXDesktop}>
  <article class="text-content">
    {title && <h2 class="title">{title}</h2>}
    <div class="prose-content">
      <slot />
    </div>
    {date && <p class="date">{date}</p>} 
  </article>
</FloatingContainer>

<style>
  .text-content {
    /* Optional: Add specific styles for text block container */
  }
  .title {
    font-size: 1.1rem; /* Example style */
    font-weight: 600;
    margin-bottom: 0.3rem;
  }
  
  .date {
    margin-top: 0.5rem;
    font-size: 0.8rem;
    font-family: monospace;
    color: #555;
  }

  .prose-content {
    font-family: sans-serif;
    line-height: 1.7;
    color: #333;
  }

  .prose-content > :global(p) {
      margin-bottom: 1em;
  }
  .prose-content > :global(h3) {
      margin-top: 1.5em;
      margin-bottom: 0.5em;
      font-size: 1.2em;
  }
</style> 