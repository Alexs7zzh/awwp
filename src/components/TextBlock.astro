---
import FloatingContainer from '@components/FloatingContainer.astro';

interface Props {
  offset: number;
  date?: string;
}

const { offset, date } = Astro.props;
---

<FloatingContainer {offset} maxWidth={60}>
  <article class="text-content">
    <div class="prose-content">
      <slot />
    </div>
    {date && <p class="date">{date}</p>} 
  </article>
</FloatingContainer>

<style>
  .text-content {
    /* Optional: Add specific styles for text block container */
  }
  
  .date {
    margin-top: 0.5rem;
    font-size: 0.8rem;
    font-family: monospace;
    color: #555;
  }

  .prose-content {
    line-height: 1.7;
    color: #333;
    font-size: 0.85rem;
  }

  .prose-content > :global(p) {
      margin-bottom: 1em;
  }
  .prose-content > :global(h3) {
      margin-top: 1.5em;
      margin-bottom: 0.5em;
      font-size: 1.2em;
  }
</style> 