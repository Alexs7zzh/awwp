---
import { getEntry } from "astro:content";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  id: string;
  image: ImageMetadata
}
const { id, image } = Astro.props;

const work = await getEntry('work', id);
if (!work) {
  throw new Error(`No work found by id ${id}`)
}
---

<article
  class="artwork-content long-image"
  aria-labelledby={`work-${work.id}-title}`}
>
  <Image
    src={image}
    alt={work.data.title}
    class="artwork-image"
    loading="lazy"
    format="webp"
  />
  <a href={`/works/${work.id}/`} class="artwork-link style-gallery-placard">
    <h2 id={`work-${work.id}-title`} class="title">
      {work.data.title}
    </h2>
    <p class="description">{work.data.intro}</p>
  </a>
</article>

<style>
.artwork-content {
  display: flex;
  align-items: flex-start;
  gap: 2rem;
  width: 100%;
  margin-bottom: 30vh;
}

.artwork-image {
  width: 70%;
  flex-shrink: 0;
  height: auto;
  display: block;
}

.artwork-link {
  text-decoration: none;
  color: inherit;
  margin: 2rem;
  padding: 0;
  flex-grow: 1;
}

.title {
  font-size: 1rem;
  font-weight: 500;
  letter-spacing: 2px;
  margin-bottom: 0.3rem;
  display: inline-block;
  position: relative;
  padding-bottom: 2px;
}
.title::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 0;
  height: 1px;
  background: currentColor;
  transition: width 0.3s;
}
.artwork-link:hover .title::after {
  width: 100%;
}

.description {
  line-height: 1.7;
  font-size: 0.85rem;
  color: #333;
  margin-top: 0.25rem;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  
  overflow: hidden;
}

  /*
 * STYLE 1: The Gallery Placard
 * Impression: Minimalist, formal, academic. The text is quiet and secondary to the art.
*/
.style-gallery-placard .title {
  font-size: 0.8rem; /* Smaller title */
  text-transform: uppercase; /* Classic museum label style */
  letter-spacing: 3px; /* Even wider for an airy, deliberate feel */
  font-weight: 400; /* Lighter weight for a more subtle presence */
  margin-bottom: 0.8rem; /* More space between title and description */
}

.style-gallery-placard .description {
  font-size: 0.8rem; /* Slightly smaller */
  line-height: 1.6; /* A bit tighter, creating a denser block of text */
  color: #666; /* Lighter color to make it recede visually */
}


/*
 * STYLE 2: The Modern Graphic
 * Impression: Confident, bold, high-contrast, and approachable.
*/
.style-modern-graphic .title {
  /* font-size: 1.6rem; Much larger for impact */
  letter-spacing: -0.5px; /* Tighter for a solid, graphic look */
  line-height: 1.2;
  margin-bottom: 0.5rem;
}
/* Keep the underline effect, it works well here */
.style-modern-graphic:hover .title::after {
  height: 2px; /* Make the underline slightly thicker on hover */
}

.style-modern-graphic .description {
  font-size: 0.9rem; /* A very readable standard size */
  line-height: 1.7; /* Keep the generous line-height for readability */
  color: #222; /* Ensure high contrast */
  margin-top: 0.5rem;
}


/*
 * STYLE 3: The Editorial Storyteller
 * Impression: Intimate, narrative, classic, and inviting. Encourages reading.
*/
.style-editorial-story .title {
  font-size: 1.1rem;
  font-style: italic; /* A classic, literary touch */
  text-transform: none; /* Ensure it's not uppercase */
  letter-spacing: 0.5px; /* Back to a more natural letter-spacing */
  font-weight: 500;
}
/* We can remove the underline for this style to keep it softer */
.style-editorial-story .title::after {
    display: none;
}

.style-editorial-story .description {
  font-size: 0.95rem; /* Larger description to prioritize the text */
  line-height: 1.8; /* Very generous line-height for reading comfort */
  color: #333;
}

@media (max-width: 767px) {
  .artwork-content {
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 25vh;
  }
  .artwork-image {
    width: 100% !important; /* Override inline style */
  }
  .artwork-link {
      margin-top: 0;
  }
  .description {
    -webkit-line-clamp: 6;
  }
}
</style>
