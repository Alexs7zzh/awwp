---
import { getEntry } from "astro:content";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  id: string;
  parallaxSpeed?: number;
  image: ImageMetadata
}
const { id, image, parallaxSpeed = Math.random() } = Astro.props;

const work = await getEntry('work', id);
if (!work) {
  throw new Error(`No work found by id ${id}`)
}
---

<article
  class="artwork-content long-image"
  aria-labelledby={`work-${work.id}-title}`}
  data-parallax-speed={parallaxSpeed}
>
  <Image
    src={image}
    alt={work.data.title}
    class="artwork-image"
    loading="lazy"
    format="webp"
  />
  <a href={`/works/${work.id}/`} class="artwork-link">
    <h2 id={`work-${work.id}-title`} class="title">
      {work.data.title}
    </h2>
    <p class="description">{work.data.intro}</p>
  </a>
</article>

<style>
.artwork-content {
  display: flex;
  align-items: flex-start;
  width: 100%;
  margin-bottom: 30vh;
}

.artwork-image {
  width: 70%;
  flex-shrink: 0;
  height: auto;
  display: block;
}

.artwork-link {
  text-decoration: none;
  color: inherit;
  margin: var(--text-vertical-margin, 2rem) var(--text-horizontal-margin, 2rem);
  padding: 0;
  flex-grow: 1;
}

.title {
  display: inline-block;
  position: relative;
  padding-bottom: 2px;
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 3px;
  font-weight: 400;
  margin-bottom: 0.8rem;
  color: var(--font-color-title);
}
.title::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 0;
  height: 1px;
  background: currentColor;
  transition: width 0.3s;
}
.artwork-link:hover .title::after {
  width: 100%;
}

.description {
  line-height: 1.6;
  font-size: 0.8rem;
  color: var(--font-color-body);
  margin-top: 0.25rem;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  
  overflow: hidden;
}

@media (max-width: 767px) {
  .artwork-content {
    flex-direction: column;
    margin-bottom: 25vh;
  }
  .artwork-image {
    width: 100% !important; /* Override inline style */
  }
  .artwork-link {
      margin-top: 0;
  }
  .description {
    -webkit-line-clamp: 6;
  }
}
</style>
