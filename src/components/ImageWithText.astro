---
import { Picture } from "astro:assets";
import { getEntry } from "astro:content";

type Props = {
  workId: string;
  layout: "left" | "right";
  priorityLoad?: boolean;
};

const { workId, layout, priorityLoad = false } = Astro.props;

// Fetch single work
const work = await getEntry("work", workId);
if (!work) {
  throw new Error(`Work with ID ${workId} not found`);
}
---

<section
  class={`gallery-item image-${layout}`}
  aria-labelledby={`title-${workId}`}
>
  <div class="image-container">
    <Picture
      src={work.data.thumbnail}
      alt={work.data.title}
      formats={["avif", "webp"]}
      widths={[480, 800, 1200, 1600]}
      sizes="(max-width: 768px) 100vw, 60vw"
      class="artwork-image"
      loading={priorityLoad ? "eager" : "lazy"}
      fetchpriority={priorityLoad ? "high" : "auto"}
    />
  </div>
  <div class="content-container">
    <div class="content-wrapper">
      <h2 id={`title-${workId}`} class="artwork-title">{work.data.title}</h2>
      {
        work.data.year && (
          <p class="artwork-year">{work.data.year.toString()}</p>
        )
      }
      {
        work.data.intro && (
          <div class="artwork-description">{work.data.intro}</div>
        )
      }
      <div class="action-button">
        <a href={`/works/${work.id}`} class="more-link">
          詳細情報
          <span class="sr-only">about {work.data.title}</span>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* CSS variables for consistent spacing and responsive design */
  :root {
    --spacing-base: 1rem;
    --spacing-lg: 2rem;
    --spacing-xl: 3rem;
    --image-height: 80vh;
    --image-width: 60%;
    --content-width: 40%;
  }

  .gallery-item {
    display: flex;
    min-height: var(--image-height);
    position: relative;
    flex-direction: row;
    box-sizing: border-box;
    width: 100%;
    max-width: 100vw;
    overflow-x: hidden;
    overflow-y: visible;
    margin-bottom: var(--spacing-xl);
  }

  .image-right {
    flex-direction: row-reverse;
  }

  .image-container {
    width: var(--image-width);
    height: var(--image-height);
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    box-sizing: border-box;
  }

  .artwork-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .content-container {
    width: var(--content-width);
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
  }

  .content-wrapper {
    max-width: 480px;
    padding: var(--spacing-lg);
    box-sizing: border-box;
    width: 100%;
    position: relative;
    z-index: 1;
  }

  .artwork-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
  }

  .artwork-year {
    font-size: 1.2rem;
    margin: 0 0 1.5rem 0;
  }

  .artwork-description {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .action-button {
    margin-top: var(--spacing-lg);
    position: relative;
    z-index: 2;
  }

  .more-link {
    display: inline-block;
    border: 1px solid currentColor;
    padding: 0.8rem 1.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .more-link:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  /* Media queries for responsive design */
  @media (max-width: 1024px) {
    :root {
      --image-height: 70vh;
    }

    .artwork-title {
      font-size: 2rem;
    }

    .content-wrapper {
      padding: var(--spacing-base);
    }
  }

  @media (max-width: 768px) {
    :root {
      --image-height: 50vh;
      --image-width: 100%;
      --content-width: 100%;
    }

    .gallery-item,
    .image-right {
      flex-direction: column;
      min-height: auto;
      margin-top: 4rem;
      margin-bottom: 4rem;
    }
  }

  @media (max-width: 480px) {
    :root {
      --image-height: 40vh;
    }

    .artwork-title {
      font-size: 1.8rem;
    }

    .content-wrapper {
      padding: var(--spacing-base);
    }
  }
</style>

