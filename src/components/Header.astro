---
import L from "./LocalizedLink.astro";
---

<header>
  <L href="/" class="home">Akira Wakita</L>
  <nav>
    <L href="/works">Works</L>
    <L href="/about">About</L>
  </nav>
</header>

<style>
  /* -------- Base link styles -------- */
  a {
    text-decoration: none;
    transition: opacity 0.2s ease-in-out;
    text-transform: uppercase;
  }
  a:hover {
    opacity: 0.7;
  }

  /* -------- Header layout -------- */
  header {
    /* Animatable custom props (big state by default) */
    --pad-top: 2em; /* distance from page edge (padding) */
    --home-size: 1.5em; /* site title size */
    --nav-size: 1em; /* nav links size */
    --gap: 2em; /* space between title and nav */
    --nav-gap: 1.5em; /* space between nav items */
    --letter-spacing: 0.04em;
    --line-color: rgba(128, 128, 128, 0.35);

    position: fixed;
    top: 0;
    left: 0;
    right: 0; /* full width */
    display: flex;
    justify-content: flex-start; /* was: space-between */
    align-items: center;
    gap: var(--gap);
    padding: var(--pad-top) var(--page-padding) 0.5em;
    z-index: 1000;
    font-size: 1rem;

    color: white;
    background: transparent;
    mix-blend-mode: difference;

    /* Smooth transitions for the shrink/grow effect + bg/line changes */
    transition:
      padding 200ms ease,
      gap 200ms ease,
      background-color 200ms ease,
      border-color 200ms ease,
      backdrop-filter 200ms ease,
      -webkit-backdrop-filter 200ms ease;
  }

  .home {
    font-size: var(--home-size);
    font-weight: 300;
    letter-spacing: var(--letter-spacing);
    transition:
      font-size 200ms ease,
      letter-spacing 200ms ease;
  }

  nav {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: var(--nav-gap);
  }

  nav a {
    font-size: var(--nav-size);
    font-weight: 300;
    transition: font-size 200ms ease;
  }

  /* -------- Mobile tweaks -------- */
  @media (max-width: 600px) {
    header {
      --pad-top: 1em;
      --home-size: 1.2em;
      --nav-gap: 1.25em;
      font-size: 0.8rem;
    }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    header,
    .home,
    nav a {
      transition: none !important;
    }
  }
</style>
