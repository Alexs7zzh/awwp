---
import { getEntry } from "astro:content";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  id: string;
  images: ImageMetadata[];
}
const { id, images } = Astro.props;

const work = await getEntry('work', id);
if (!work) {
  throw new Error(`No work found by id ${id}`);
}

function calculateWidthPercentage(image: ImageMetadata): number {
  const aspectRatio = image.width / image.height;
  if (aspectRatio <= 1.1) {
    return 48;
  }
  const scaledWidth = 48 + (aspectRatio - 1.1) * 35;
  return Math.max(48, Math.min(100, scaledWidth));
}
---

<!-- MODIFICATION 1: Changed class from 'long-image' to 'multi-image' -->
<article
  class="artwork-content multi-image"
  aria-labelledby={`work-${work.id}-title}`}
>
  <div class="images-container">
    {images.map((image, index) => {
      const widthPercent = calculateWidthPercentage(image);
      return (
        <Image
          src={image}
          alt={`${work.data.title} - Image ${index + 1}`}
          class="artwork-image"
          loading="lazy"
          format="webp"
          style={`width: ${widthPercent}%;`}
        />
      )
    })}
  </div>

  <a href={`/works/${work.id}/`} class="artwork-link style-gallery-placard">
    <h2 id={`work-${work.id}-title`} class="title">
      {work.data.title}
    </h2>
    <p class="description">{work.data.intro}</p>
  </a>
</article>

<style>
.artwork-content {
  display: flex;
  align-items: flex-start;
  gap: 2rem;
  width: 100%;
  margin-bottom: 30vh;
}

.images-container {
  width: 70%;
  padding: 2rem;
  flex-shrink: 0;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  gap: 12rem;
}

.artwork-image {
  height: auto;
  display: block;
  margin-left: auto;
  margin-right: auto;
}

.artwork-link {
  text-decoration: none;
  color: inherit;
  margin: 2rem;
  padding: 0;
  flex-grow: 1;
  /* MODIFICATION 2: Removed sticky positioning; JS will handle it. */
}

.title {
  font-size: 1rem;
  font-weight: 500;
  letter-spacing: 2px;
  margin-bottom: 0.3rem;
  display: inline-block;
  position: relative;
  padding-bottom: 2px;
}
.title::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 0;
  height: 1px;
  background: currentColor;
  transition: width 0.3s;
}
.artwork-link:hover .title::after {
  width: 100%;
}

.description {
  line-height: 1.7;
  font-size: 0.85rem;
  color: #333;
  margin-top: 0.25rem;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.style-gallery-placard .title {
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 3px;
  font-weight: 400;
  margin-bottom: 0.8rem;
}

.style-gallery-placard .description {
  font-size: 0.8rem;
  line-height: 1.6;
  color: #666;
}

@media (max-width: 767px) {
  .artwork-content {
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 25vh;
  }
  .images-container {
    width: 100%;
    gap: 0.5rem;
  }
  .artwork-image {
    width: 100% !important;
  }
  .artwork-link {
    margin-top: 0;
    position: static; /* This is correct for mobile */
  }
  .description {
    -webkit-line-clamp: 6;
  }
}
</style>
