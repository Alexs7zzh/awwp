---
import { getEntry } from "astro:content";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  id: string;
  parallaxSpeed?: number;
  images: ImageMetadata[];
  positions?: number[]; // values in [0,1]
}

const { id, images, positions = [], parallaxSpeed = Math.random() } = Astro.props as Props;

const work = await getEntry("work", id);
if (!work) {
  throw new Error(`No work found by id ${id}`);
}

function calculateWidthPercentage(image: ImageMetadata): number {
  const aspectRatio = image.width / image.height;
  if (aspectRatio <= 1.1) return 48;
  const scaledWidth = 48 + (aspectRatio - 1.1) * 35;
  return Math.max(48, Math.min(100, scaledWidth));
}

function calculateLeftOffset(widthPercent: number, position: number): number {
  const p = Math.min(1, Math.max(0, position)); // clamp 0‑1
  const maxLeft = 100 - widthPercent;           // can’t overflow right edge
  return p * maxLeft;
}
---

<article
  class="artwork-content multi-image"
  aria-labelledby={`work-${work.id}-title`}
  data-parallax-speed={parallaxSpeed}
>
  <div class="images-container">
    {images.map((image, index) => {
      const widthPercent = calculateWidthPercentage(image);
      const leftPercent = calculateLeftOffset(
        widthPercent,
        positions[index] ?? 0.5 // default – centred
      );

      return (
        <Image
          key={index}
          src={image}
          alt={`${work.data.title} – Image ${index + 1}`}
          class="artwork-image"
          loading="lazy"
          format="webp"
          style={`width:${widthPercent}%; margin-left:${leftPercent}%`}
        />
      );
    })}
  </div>

  <a href={`/works/${work.id}/`} class="artwork-link style-gallery-placard">
    <h2 id={`work-${work.id}-title`} class="title">
      {work.data.title}
    </h2>
    <p class="description">{work.data.intro}</p>
  </a>
</article>

<style>
.artwork-content {
  display: flex;
  align-items: flex-start;
  width: 100%;
  margin-bottom: 30vh;
}

/*
 * Images are laid out with flex‑wrap so they flow naturally; we simply push each
 * one horizontally using its computed margin‑left value.
 */
.images-container {
  position: relative;   /* keeps margin‑left pooled inside block */
  width: 70%;
  padding: 2rem;
  flex-shrink: 0;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  gap: 12rem;
}

.artwork-image {
  height: auto;
  display: block;
  margin-right: auto; /* keeps image block from collapsing */
}

.artwork-link {
  text-decoration: none;
  color: inherit;
  margin: var(--text-vertical-margin, 2rem) var(--text-horizontal-margin, 2rem);
  padding: 0;
  flex-grow: 1;
  /* sticky removed; JS handles on scroll */
}

.title {
  font-size: 1rem;
  font-weight: 500;
  letter-spacing: 2px;
  margin-bottom: 0.3rem;
  display: inline-block;
  position: relative;
  padding-bottom: 2px;
}
.title::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 0;
  height: 1px;
  background: currentColor;
  transition: width 0.3s;
}
.artwork-link:hover .title::after {
  width: 100%;
}

.description {
  line-height: 1.7;
  font-size: 0.85rem;
  color: #333;
  margin-top: 0.25rem;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.style-gallery-placard .title {
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 3px;
  font-weight: 400;
  margin-bottom: 0.8rem;
}

.style-gallery-placard .description {
  font-size: 0.8rem;
  line-height: 1.6;
  color: #666;
}

@media (max-width: 767px) {
  .artwork-content {
    flex-direction: column;
    margin-bottom: 25vh;
  }
  .images-container {
    width: 100%;
    gap: 0.5rem;
  }
  /* on mobile we ignore custom offsets and just make images full‑width */
  .artwork-image {
    width: 100% !important;
    margin-left: 0 !important;
  }
  .artwork-link {
    margin-top: 0;
    position: static; /* correct for mobile */
  }
  .description {
    -webkit-line-clamp: 6;
  }
}
</style>
