---
import { Config } from "@config";
import Header from "@components/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Noto+Sans+JP:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <title>Akira Wakita</title>
    <slot name="head" />
  </head>
  <body>
    <Header />
    <div
      style={`margin-top: 10rem;--text-horizontal-margin: ${Config.description.horizontalMargin}; --text-vertical-margin: ${Config.description.verticalMargin};`}
    >
      <slot />
    </div>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    min-width: 0;
  }

  html {
    overflow-x: hidden;
    width: 100%;
  }

  body {
    --background-color: black;
    --font-color-title: white;
    --font-color-body: white;

    width: 100%;
    min-height: 100dvh;
    overflow-x: hidden;
    cursor: auto;
    -webkit-overflow-scrolling: touch;
    background-color: var(--background-color);

    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;

    font-family:
      "Inter", "Noto Sans JP", "Helvetica Neue", "Hiragino Kaku Gothic Pro",
      "Hiragino Sans", "Yu Gothic", "Meiryo", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    text-wrap: balance;
  }

  p {
    text-wrap: pretty;
  }

  img,
  picture,
  video,
  canvas,
  svg {
    display: block;
    max-width: 100%;
    width: auto;
    height: auto;
  }

  input,
  button,
  textarea,
  select {
    font: inherit;
  }

  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    overflow-wrap: break-word;
  }

  a {
    color: inherit;
    transition: color 0.3s ease;
  }

  /* ---------- Headings (baseline inspired by intro text) ---------- */
  h1 {
    color: var(--font-color-title);
    font-weight: 500;
    line-height: 1.25;
    letter-spacing: 0.02em;
    font-size: clamp(1.8rem, 3.5vw, 2.6rem);
    margin-block: 0 0.75rem;
  }

  h2,
  h3,
  h4 {
    color: var(--font-color-title);
    font-weight: 400; /* lighter, to match intro tone */
    text-transform: uppercase;
    letter-spacing: 0.14em; /* matches your preferred tracking */
    line-height: 1.3;
  }

  h2 {
    font-size: clamp(0.95rem, 1.4vw, 1.1rem);
    margin-block: 2rem 0.4rem;
  }

  h3 {
    font-size: clamp(0.9rem, 1.2vw, 1rem);
    margin-block: 1.6rem 0.3rem;
  }

  h4 {
    font-size: clamp(0.85rem, 1vw, 0.95rem);
    margin-block: 1.2rem 0.2rem;
  }

  /* ---------- Lists (tight items, outside markers, small markers) ---------- */
  /* Container spacing kept modest; no extra gap between list items */
  ul,
  ol {
    list-style-position: outside; /* decorators on the left, outside text box */
    margin-block: 1rem; /* space around the whole list, not items */
    padding-inline-start: 1.25rem; /* room for outside markers */
  }

  /* Unordered lists: standard filled dots */
  ul {
    list-style-type: disc;
  }

  /* Ordered lists: small circle dot (replace numbers) */
  ol {
    list-style-type: circle; /* hollow bullet instead of decimals */
  }

  /* Remove spacing between list items */
  li {
    margin: 0;
    padding: 0;
  }

  /* Ensure paragraphs inside list items don’t add extra space */
  li > p {
    margin: 0;
  }

  /* Slightly smaller, quieter markers to match intro’s subtlety */
  li::marker {
    font-size: 0.7em;
    line-height: 1;
    color: var(--font-color-body);
  }

  /* Nested lists stay compact and aligned */
  li > ul,
  li > ol {
    margin-block: 0.25rem; /* small breathing room for nesting */
    padding-inline-start: 1.25rem;
  }

  @media (prefers-reduced-motion: no-preference) {
    html {
      interpolate-size: allow-keywords;
    }
  }

  p + p {
    margin-bottom: 1rem;
  }
</style>
